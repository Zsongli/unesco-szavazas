.thin-scrollbar {
	&::-webkit-scrollbar {
		@apply w-2 h-1;
	}
	&::-webkit-scrollbar-track {
		@apply bg-transparent;
	}
	&::-webkit-scrollbar-thumb {
		@apply rounded-full bg-gray-600;
	}

	&::-webkit-scrollbar-thumb:hover {
		@apply bg-gray-500;
	}
}

.text-vertical {
	writing-mode: vertical-lr;
}
